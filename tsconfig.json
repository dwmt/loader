{
	"typeAcquisition": {
		"include": [
			"jest"
		]
	},
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": [
			"es2015"
		],
		"strict": true,
		"composite": true,
		"incremental": true,
		"declaration": true,
		"outDir": "dist",
		"sourceMap": true,
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"src/**/*",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	]
}